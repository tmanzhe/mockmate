datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  name      String    
  email     String    @unique
  password  String    
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) // Changed to have a default value
}

model Session {
  id           String     @id @default(uuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String     
  topic        String     
  style        String?    
  questions    Question[]
  responses    Response[]
  feedbackLogs Feedback[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) // Changed to have a default value

  @@index([userId])
}

model Question {
  id          String     @id @default(uuid())
  session     Session    @relation(fields: [sessionId], references: [id])
  sessionId   String     
  text        String     
  type        String     
  responses   Response[]
  createdAt   DateTime   @default(now())

  @@index([sessionId])
}

model Response {
  id              String    @id @default(uuid())
  session         Session   @relation(fields: [sessionId], references: [id])
  sessionId       String    
  question        Question  @relation(fields: [questionId], references: [id])
  questionId      String    
  userAnswer      String    
  mockmateThoughts String?  
  audioUrl        String?   
  videoUrl        String?   
  createdAt       DateTime  @default(now())

  @@index([sessionId])
  @@index([questionId])
}

model Feedback {
  id          String    @id @default(uuid())
  session     Session   @relation(fields: [sessionId], references: [id])
  sessionId   String    
  thoughts    String    
  createdAt   DateTime  @default(now())

  @@index([sessionId])
}